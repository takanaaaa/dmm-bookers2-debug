<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h2>Results index</h2>
      <% if @range == '2' %>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @book.each do |book| %>
              <tr>
                <td>
                  <%= link_to(book.user) do %>
                  <%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg")%>
                  <% end %>
                </td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end%>
          </tbody>
        </table>
      <% elsif @range == '1' %>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @user.each do |user|%>
              <tr>
                <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg")%></td>
                <td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user)%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% elsif @range == '3' %>
        <%= render "books/index", books: @books %>
      <% end %>
    </div>
  </div>
</div>