<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'layouts/errors', obj: @book %>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <%= render "detail", group: @group %>
            <td>
              <% if @group.owner_id == current_user.id %>
                <%= link_to "Notice an Event", new_inquiry_path(@group.id), class: 'btn btn-primary'%>
              <% else %>
                <% if @group.users.include?(current_user)%>
                  <%= link_to "Leave this group", leave_group_path(@group), class: 'btn btn-danger' %>
                <% else %>
                  <%= link_to "Join this group", join_group_path(@group), class: 'btn btn-success' %>
                <% end %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
   </div>
  </div>
</div>