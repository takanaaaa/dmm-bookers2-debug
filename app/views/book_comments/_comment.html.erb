<table>
  <% book.book_comments.each do |comment| %>
    <tr>
    	<td>
    	  <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag(comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.comment %></td>
      <% if comment.user_id == current_user.id %>
      <td><%= link_to 'Destroy', book_book_comment_path(book_id: book.id, id: comment.id), method: :delete, date: { confirm: '本当に削除しますか?'}, class: "btn btn-sm btn-danger destroy_book_#{@book.id}", remote: true %></td>
      <% end %>
    </tr>
  <% end %>
</table>